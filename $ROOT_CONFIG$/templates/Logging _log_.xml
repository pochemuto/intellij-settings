<templateSet group="Logging (log)">
  <template name="logw" value="log.warn(&quot;$END$&quot;);" description="Log warning" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="false" />
    </context>
  </template>
  <template name="logt" value="log.trace(&quot;$END$&quot;);" description="Log trace" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="false" />
    </context>
  </template>
  <template name="logi" value="log.info(&quot;$END$&quot;);" description="Log info" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="false" />
    </context>
  </template>
  <template name="loge" value="log.error(&quot;$END$&quot;);" description="Log error" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="false" />
    </context>
  </template>
  <template name="logd" value="log.debug(&quot;$END$&quot;);" description="Log debug" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_STATEMENT" value="true" />
      <option name="JAVA_EXPRESSION" value="false" />
    </context>
  </template>
  <template name="log" value="private static final Logger log = LoggerFactory.getLogger($CLASS_NAME$.class);" description="Create logger" toReformat="false" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="HTML_TEXT" value="false" />
      <option name="HTML" value="false" />
      <option name="XSL_TEXT" value="false" />
      <option name="XML" value="false" />
      <option name="JAVA_CODE" value="false" />
      <option name="JAVA_STATEMENT" value="false" />
      <option name="JAVA_EXPRESSION" value="false" />
      <option name="JAVA_DECLARATION" value="true" />
      <option name="JAVA_COMMENT" value="false" />
      <option name="JAVA_STRING" value="false" />
      <option name="COMPLETION" value="false" />
      <option name="MAVEN" value="false" />
      <option name="OTHER" value="false" />
    </context>
  </template>
</templateSet>